<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout01"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/brick_blue" >

    <LinearLayout
        android:id="@+id/brick_place_at_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" >

        <TextView style="@style/brick_text_style"
            android:id="@+id/TextView01"
            android:paddingRight="10dp"
            android:text="@string/x_label" >
        </TextView>

        <TextView style="@style/brick_input_text_style"
            android:id="@+id/brick_place_at_x_text_view"
            android:text="@string/brick_place_at_default" >
        </TextView>

        <EditText style="@style/brick_input_edit_text_style"
            android:id="@+id/brick_place_at_x_edit_text"
            android:inputType="number|numberDecimal|numberSigned"
            android:text="@string/brick_place_at_default" >
        </EditText>

        <TextView style="@style/brick_text_style"
            android:id="@+id/TextView02"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/y_label" >
        </TextView>

        <TextView style="@style/brick_input_text_style"
            android:id="@+id/brick_place_at_y_text_view"
            android:text="@string/brick_place_at_default" >
        </TextView>

        <EditText style="@style/brick_input_edit_text_style"
            android:id="@+id/brick_place_at_y_edit_text"
            android:inputType="number|numberDecimal|numberSigned"
            android:text="@string/brick_place_at_default" >
        </EditText>
    </LinearLayout>

    <TextView style="@style/brick_text_style"
        android:id="@+id/ValueTextViewXY"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/brick_place_at_linear_layout"
        android:text="@string/brick_place_at" >
    </TextView>

</RelativeLayout>
