<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/brick_red"
    android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <TextView style="@style/brick_text_style"
                android:paddingRight="10dp"
                android:text="@string/brick_motor_turn_angle" >
            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" >

                <Spinner
                    android:id="@+id/motor_spinner"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:focusable="false" >
                </Spinner>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <TextView style="@style/brick_text_style"
                android:paddingRight="10dp"
                android:text="@string/motor_angle" >
            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" >

                <TextView style="@style/brick_input_text_style"
                    android:id="@+id/motor_turn_angle_text_view"
                    android:text="@string/brick_motor_turn_angle_default" />

                <EditText style="@style/brick_input_edit_text_style"
                    android:id="@+id/motor_turn_angle_edit_text"
                    android:inputType="number|numberDecimal|numberSigned"
                    android:text="@string/brick_motor_turn_angle_default" >
                </EditText>

                <TextView style="@style/brick_text_style"
                    android:paddingLeft="2dp"
                    android:paddingRight="5dp"
                    android:text="@string/degree" >
                </TextView>

                <Button
                    android:id="@+id/directions_btn"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_dropdown"
                    android:clickable="false"
                    android:focusable="false" />
            </LinearLayout>
        </RelativeLayout>
</LinearLayout>
